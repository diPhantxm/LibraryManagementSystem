<Window x:Class="LibraryManagementSystem.Views.IdBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem.Views"
        mc:Ignorable="d"
        Title="IdBoxDialog" Height="200" Width="300">
    <Grid>
        <StackPanel Width="150" Height="100">
            <TextBlock HorizontalAlignment="Center">Id:</TextBlock>
            <TextBox Width="100"></TextBox>
            <TextBlock HorizontalAlignment="Center">Login:</TextBlock>
            <TextBox Width="100"></TextBox>
            <Button Margin="0, 10, 0, 0" Width="100">Select</Button>
        </StackPanel>
    </Grid>
</Window>
